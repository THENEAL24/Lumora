# Server
LUMORA_SERVER_ADDRESS=:8080
LUMORA_SERVER_READ_TIMEOUT_SECONDS=15
LUMORA_SERVER_WRITE_TIMEOUT_SECONDS=15

# Database (use DATABASE_URL or individual fields below)
DATABASE_URL=postgres://lumora:secret@localhost:5432/lumora?sslmode=disable
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=lumora
DB_SSLMODE=disable

# Auth
LUMORA_AUTH_JWT_SECRET=change-me-in-prod
LUMORA_AUTH_ACCESS_TOKEN_TTL_MINUTES=60

# Logging
LUMORA_LOG_LEVEL=info
LUMORA_LOG_FORMAT=text
